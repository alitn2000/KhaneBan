@using FrameWork
@using KhaneBan.Domain.Core.Entites.UserRequests
@using KhaneBan.Domain.Core.Enums
@model Suggestion

<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <title>جزئیات پیشنهاد</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <link rel="stylesheet" href="~/UsersTemplate/css/custom/compare.css">
</head>
<body>
    <section class="single-banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-content">
                        <h2>جزئیات پیشنهاد</h2>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">صفحه اصلی</a></li>
                            <li class="breadcrumb-item active" aria-current="page">جزئیات پیشنهاد</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="compare-part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="compare-list">
                        <table class="table-list">
                            <thead>
                                <tr>
                                    <th scope="col">شناسه پیشنهاد</th>
                                    <th scope="col">شناسه سفارش</th>
                                    <th scope="col">عنوان سرویس</th>
                                    <th scope="col">توضیحات</th>
                                    <th scope="col">قیمت پیشنهادی</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Id</td>
                                    <td>@Model.RequestId</td>
                                    <td>@Model.Request.HomeService.Title</td>
                                    <td>@Model.Description</td>
                                    <td>@Model.Price</td>
                                   
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="compare-btn center-50">
                        <a asp-action="SuggestionList" class="btn btn-inline">
                            <i class="fas fa-arrow-right"></i><span>بازگشت به لیست</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
