
@using KhaneBan.EndPoints.MVC.Areas.Users.Models
@model AddRequestViewModel
<!DOCTYPE html>
<html lang="en">


<head>
	<meta http-equiv="content-type" content="text/html;charset=utf-8" />
	<link rel="stylesheet" href="~/UsersTemplate/css/custom/ad-post.css">
</head>

<body>
	<header class="header-part">
		<div class="container">
			<div class="header-content">
				<div class="header-left">
					<ul class="header-widget">
						<li><button type="button" class="header-menu"><i class="fas fa-align-left"></i></button></li>
						<li><a asp-area="Users" asp-controller="Home" asp-action="Index" class="header-logo"><img src="~/UsersTemplate/images/logo.png" alt="logo"></a></li>
						<li>
							<a href="user-form.html" class="header-user">
								<i class="fas fa-user"></i><span>ورود</span>
							</a>
						</li>
						<li><button type="button" class="header-src"><i class="fas fa-search"></i></button></li>
					</ul>
				</div>


			</div>
		</div>
	</header>
	<div class="sidebar-part">
		<div class="sidebar-body">
			<div class="sidebar-header">
				<a asp-area="Users" asp-controller="Home" asp-action="Index" class="sidebar-logo">
					<img src="~/UsersTemplate/images/logo.png"
						 alt="logo">
				</a><button class="sidebar-cross"><i class="fas fa-times"></i></button>
			</div>
			<div class="sidebar-content">

				<div class="sidebar-menu">
					<ul class="nav nav-tabs">
						<li><a href="#main-menu" class="nav-link active" data-toggle="tab">منوی اصلی </a></li>

					</ul>
					<div class="tab-pane active" id="main-menu">
						<ul class="navbar-list">

							<li class="navbar-item navbar-dropdown">
								<a class="navbar-link" href="#">
									<span>صفحات</span><i class="fas fa-plus"></i>
								</a>
								<ul class="dropdown-list">
									<li><a asp-controller="Home" asp-action="Index" class="dropdown-link">صفحه اصلی</a></li>
									@if (User.IsInRole("Expert"))
									{
										<li><a asp-controller="ExpertProfile" asp-action="Index" class="dropdown-link">پروفایل</a></li>
									}
									else
									{
										<li><a asp-controller="Profile" asp-action="Index" class="dropdown-link">پروفایل</a></li>
									}

									<li><a asp-controller="Account" asp-action="Login" class="dropdown-link">ورود</a></li>

									<li><a asp-controller="Account" asp-action="Logout" class="dropdown-link">خروج</a></li>
								</ul>
							</li>

						</ul>
					</div>

				</div>
				<div class="sidebar-footer">
					<p>کلیه حقوق محفوظ است توسط <a href="#"> کلاسیک ادز </a></p>
					<p>طراحی توسط <a href="https://www.rtl-theme.com/author/tn_plugin">جعفر عباسی خان </a></p>
				</div>
			</div>
		</div>
	</div>

	<section class="single-banner">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="single-content">
						<h2>ثبت سفارش</h2>

					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="adpost-part">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 m-auto">
					<form asp-action="AddRequest" method="post" enctype="multipart/form-data" class="adpost-form">
						<div class="adpost-card">
							<div class="adpost-title">
								<h3>ثبت درخواست سرویس جدید </h3>
							</div>
							<div class="row">
								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="HomeServiceTitle" class="form-label">هوم سرویس</label>
										<input asp-for="HomeServiceTitle" class="form-control">
										<span asp-validation-for="HomeServiceTitle" class="text-danger"></span>
									</div>
								</div>



								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="RequestForDate" class="form-label">تاریخ</label>
										<input asp-for="RequestForDate" class="form-control">
										<span asp-validation-for="RequestForDate" class="text-danger"></span>
									</div>
								</div>

								<div class="col-lg-12">
									<div class="form-group">
										<label asp-for="RequestForTime" class="form-label">ساعت</label>
										<input asp-for="RequestForTime" type="time" class="form-control">
										<span asp-validation-for="RequestForTime" class="text-danger"></span>
									</div>
								</div>
							</div>
							<div class="col-lg-12">
								<label class="form-label">آپلود تصویر</label>
								<input type="file" name="ImageFiles" class="form-control" asp-for="ImageFiles" multiple />
							</div>

							<div class="col-lg-12">
								<label asp-for="Description" class="form-label">توضیحات</label>
								<textarea asp-for="Description" class="form-control" rows="3"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>

						<input type="hidden" asp-for="HomeServiceId" />
						<div class="adpost-card pb-2">

							<div class="form-group text-right">
								<button type="submit" class="btn btn-inline">
									<i class="fas fa-check-circle"></i><span>ثبت</span>
								</button>
							</div>
						</div>


					</form>

				</div>



			</div>
		</div>

	</section>


</body>

</html>