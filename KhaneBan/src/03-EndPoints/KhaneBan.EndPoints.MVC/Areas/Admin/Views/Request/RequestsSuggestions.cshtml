@using KhaneBan.Domain.Core.Entites.UserRequests

@model List<Suggestion>



	<!-- Overlay For Sidebars -->
	<div class="overlay"></div>

<section class="content contact">
	<div class="body_scroll">
		<div class="block-header">
			<div class="row">
				<div class="col-lg-7 col-md-6 col-sm-12">
					<h2>مخاطبین</h2>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> آئرو</a></li>
						<li class="breadcrumb-item"><a href="javascript:void(0);">برنامه</a></li>
						<li class="breadcrumb-item active">پیشنهاد ها</li>
					</ul>
				</div>

			</div>
		</div>
		<div class="container-fluid">
			<div class="row clearfix">
				<div class="col-lg-12">
					<div class="card">
						<div class="table-responsive">
							<table class="table table-hover mb-0 c_list c_table">
									<thead>
										<tr>
											<th data-breakpoints="xs">شناسه پیشنهاد</th>
											<th data-breakpoints="xs sm md">کارشناس</th>
											<th data-breakpoints="xs sm md">توضیحات</th>
											<th data-breakpoints="xs sm md">تاریخ پیشنهادی</th>
											<th data-breakpoints="xs">قیمت پیشنهادی</th>
										</tr>
									</thead>
									<tbody>
										@if (Model != null && Model.Any())
										{
											@foreach (var sug in Model)
											{
												<tr>
													<td>
														<span><i class="mr-2"></i>@sug.Id</span>
													</td>

													<td>
														<span>@($"{sug.Expert.User.FirstName} {sug.Expert.User.LastName}")</span>
													</td>
													<td>
														<span>@sug.Description</span>
													</td>
													<td>
														<span>@sug.StartDate</span>
													</td>
													<td>
														<span>@sug.Price</span>
													</td>

												</tr>
											}
										}
										else
										{
											<tr>
												<td colspan="6" class="text-center">هیچ پیشنهادی ثبت نشده</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</section>
