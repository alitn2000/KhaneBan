@RenderBody()
@await RenderSectionAsync("Scripts", required: false)

<!doctype html>

<html class="no-js " lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>:: Aero Bootstrap4 Admin :: eCommerce</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/AdminTemplate/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminTemplate/plugins/jvectormap/jquery-jvectormap-2.0.3.css" />
    <link rel="stylesheet" href="~/AdminTemplate/plugins/morrisjs/morris.css" />

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/AdminTemplate/css/style.min.css">
</head>

<body class="theme-blush">

    <!-- Left Sidebar -->
    <aside id="leftsidebar" class="sidebar">
        <div class="navbar-brand">
            <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
            <a href="index.html"><img src="~/AdminTemplate/images/logo.svg" width="25" alt="Aero"><span class="m-l-10">آئرو</span></a>
        </div>
        <div class="menu">
            <ul class="list">
                <li>
                    <div class="user-info">
                        <a class="image" href="profile.html"><img src="~/AdminTemplate/images/profile_av.jpg" alt="User"></a>
                        <div class="detail">
                            <h4>آرش</h4>
                            <small>سوپر مدیر</small>
                        </div>
                    </div>
                </li>
                <li><a href="index.html"><i class="zmdi zmdi-home"></i><span>داشبورد</span></a></li>
                <li>
                    <a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-apps"></i><span>مدیریت کاربران</span></a>
                    <ul class="ml-menu">
                        <li><a asp-area="Admin" asp-controller="Customer" asp-action="CustomerList">مشتریان</a></li>
                        <li><a asp-area="Admin" asp-controller="Expert" asp-action="ExpertList">کارشناسان</a></li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-assignment"></i><span>مدیریت سرویس ها</span></a>
                    <ul class="ml-menu">
                        <li><a asp-area="Admin" asp-controller="Category" asp-action="CategoryList">کتگوری ها</a></li>
                        <li><a asp-area="Admin" asp-controller="SubCategory" asp-action="SubCategoryList">ساب کتگوری ها</a></li>
                        <li><a asp-area="Admin" asp-controller="HomeService" asp-action="HomeServiceList">هوم سرویس ها</a></li>

                    </ul>
                </li>
                <li>
                    <a  asp-area="Admin" asp-controller="Rating" asp-action="RatingList"><i class="zmdi zmdi-folder"></i><span>مدیریت کامنت ها</span></a>
                    
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Request" asp-action="RequestList"><i class="zmdi zmdi-folder"></i><span>درخواست ها</span></a>
                    <ul class="ml-menu">
                    </ul>
                </li>




            </ul>
        </div>
    </aside>


    <!-- Jquery Core Js -->
    <script src="~/AdminTemplate/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script src="~/AdminTemplate/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->

    <script src="~/AdminTemplate/bundles/morrisscripts.bundle.js"></script> <!-- Morris Plugin Js -->
    <script src="~/AdminTemplate/bundles/jvectormap.bundle.js"></script> <!-- JVectorMap Plugin Js -->
    <script src="~/AdminTemplate/bundles/sparkline.bundle.js"></script> <!-- Sparkline Plugin Js -->
    <script src="~/AdminTemplate/bundles/knob.bundle.js"></script> <!-- Jquery Knob Plugin Js -->

    <script src="~/AdminTemplate/bundles/mainscripts.bundle.js"></script>
    <script src="~/AdminTemplate/js/pages/ecommerce.js"></script>
    <script src="~/AdminTemplate/js/pages/charts/jquery-knob.min.js"></script>
</body>

</html>